# ========================================
# 本地開發環境設定
# ========================================
ENVIRONMENT=local

# ========================================
# LINE Bot 設定 (從 LINE Developers Console 取得)
# ========================================
# 在 LINE Developers Console > Messaging API 中取得
LINE_CHANNEL_ACCESS_TOKEN="your_channel_access_token_here"
LINE_CHANNEL_SECRET="your_channel_secret_here"
LINE_CHANNEL_ID="your_channel_id_here"

# Webhook URL (使用 ngrok 產生的 URL)
WEBHOOK_URL="https://your-ngrok-url.ngrok-free.app/"

# ========================================
# 本地開發設定
# ========================================
DEBUG=True
PORT=8080
LOG_LEVEL=DEBUG

# ========================================
# 其他設定 (暫時用不到，可以留空)
# ========================================
# GCP 專案設定 (部署到 GCP 時才需要)
GCP_PROJECT=""
BUCKET_NAME=""
PROCESSED_BUCKET_NAME=""
DOCAI_LOCATION=""
DOCAI_PROCESSOR_ID=""

# 安全設定 (加入簽章驗證時才需要)
WEBHOOK_SECRET=""

# 外部 API 設定 (擴展功能時才需要)
GOOGLE_VISION_API_KEY=""
DEEPSEEK_API_KEY=""
