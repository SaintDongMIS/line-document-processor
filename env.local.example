# ========================================
# 本地開發環境設定
# ========================================
ENVIRONMENT=local

# ========================================
# GCP 專案設定 (本地測試用)
# ========================================
GCP_PROJECT="your-dev-project-id"
BUCKET_NAME="dev-raw-invoices"
PROCESSED_BUCKET_NAME="dev-processed-data"
DOCAI_LOCATION="us"
DOCAI_PROCESSOR_ID="your-dev-processor-id"

# ========================================
# LINE Bot 設定 (測試用)
# ========================================
LINE_CHANNEL_ACCESS_TOKEN="your-test-channel-access-token"
LINE_CHANNEL_SECRET="your-test-channel-secret"

# 測試用的用戶和群組 ID
LINE_USER_ID_SAM="your-test-user-id"
LINE_GROUP_ID_TEMP="your-test-group-id"
LINE_GROUP_ID_PATROL="your-test-group-id"

# ========================================
# 本地開發設定
# ========================================
DEBUG=True
PORT=8080
LOG_LEVEL=DEBUG

# ========================================
# 安全設定 (本地開發用)
# ========================================
WEBHOOK_SECRET="dev-webhook-secret-key"

# ========================================
# 外部 API 設定 (測試用)
