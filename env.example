# ========================================
# 環境設定
# ========================================
ENVIRONMENT=local  # local, staging, production

# ========================================
# GCP 專案設定
# ========================================
GCP_PROJECT="your-gcp-project-id"
BUCKET_NAME="raw-invoices"
PROCESSED_BUCKET_NAME="processed-data"
DOCAI_LOCATION="us"
DOCAI_PROCESSOR_ID="your-processor-id"

# ========================================
# LINE Bot 設定 (請從 LINE Developer Console 取得)
# ========================================
LINE_CHANNEL_ACCESS_TOKEN="your-line-channel-access-token"
LINE_CHANNEL_SECRET="your-line-channel-secret"

# 已知的用戶和群組 ID (可選，用於測試)
LINE_USER_ID_SAM="your-user-id"
LINE_GROUP_ID_TEMP="your-group-id"
LINE_GROUP_ID_PATROL="your-group-id"

# ========================================
# 資料庫設定 (如果使用 Cloud SQL)
# ========================================
DB_HOST="your-db-host"
DB_NAME="your-db-name"
DB_USER="your-db-user"
DB_PASSWORD="your-db-password"

# ========================================
# 本地開發設定
# ========================================
DEBUG=True
PORT=8080
LOG_LEVEL=DEBUG

# ========================================
# 安全設定
# ========================================
# 用於簽章驗證的密鑰 (請使用強密碼)
WEBHOOK_SECRET="your-webhook-secret"

# ========================================
# 外部 API 設定
# ========================================
# Google Vision API (如果需要)
GOOGLE_VISION_API_KEY="your-google-vision-api-key"

# DeepSeek API (如果需要)
DEEPSEEK_API_KEY="your-deepseek-api-key"
